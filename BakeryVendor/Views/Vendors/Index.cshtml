@using Bakery.Models;

@{
  Layout = "_layout";
}

<h1>Open Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>There are no active vendors</h3>
}

@foreach (Vendor vendor in Model)
{
  <div>
    <li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
    <li>@vendor.Description</li>
    <li>@vendor.Id</li>
  </div>
}

<a href='/vendors/new'><button class="btn btn-success">Add a Vendor</button></a>

<form action="/vendors/delete" method="post">
  <button type="submit" class="btn btn-danger">Delete All Vendors</button>
</form>